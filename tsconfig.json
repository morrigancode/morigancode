{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],

    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "*.ts",
    "**/**/*.ts",
    "**/**/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "build",
    ".next"
  ]
}